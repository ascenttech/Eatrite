<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_screen"
    >


    <ImageView
        android:id="@+id/logo_image_splash_screen_activity"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon_splash_screen"
        android:layout_centerInParent="true"
        />
    <com.healthyfood.eatrite.custom.CustomTextView
        android:id="@+id/app_name_text_splash_screen_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_double_extra_large"
        android:layout_below="@id/logo_image_splash_screen_activity"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />


</RelativeLayout>