<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/rectangle_box"
    android:layout_marginBottom="@dimen/margin"
    >

    <ImageView
        android:id="@+id/background_image_all_dishes_activity"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />

    <include
        layout="@layout/layout_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/background_image_all_dishes_activity"
        />

    <include
        layout="@layout/layout_add_button_pricing_circle_subtract_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>