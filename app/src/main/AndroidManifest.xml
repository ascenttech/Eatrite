<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.healthyfood.eatrite" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.AboutUsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.AddressActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.AllDishesActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.AllKitchenActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.AllThemesActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.LandingActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"/>
        <activity
            android:name=".activities.LoginOrRegisterActivity"
            android:label="@string/app_name"
            />
        <activity
            android:name=".activities.OrderSummaryActivity"
            android:label="@string/app_name"
            />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/app_name"
            android:noHistory="true"/>
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
